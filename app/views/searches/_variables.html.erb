
<section id="variable-results" <%= conceal_unless(['var'], params[:show]) %>>
	<%= will_paginate(@variables_search.results, :params => {:show => "var"}) %>

	<fieldset class="search-border"> 
    <table id="search-results-table" border=1>
      <thead>
        <tr>
          <th>Variable</th>
          <th>Archive</th>
        </tr>
      </thead>
      <tbody>
        <% @variables_search.each_hit_with_result do |hit, variable| %>
<!-- move to shared partial -->
          <%= render :partial => "/shared/variable_tr", :locals => {:hit => hit, :variable => variable} %>
        <% end %>
      </tbody>
    </table>
  </fieldset>
</section>
