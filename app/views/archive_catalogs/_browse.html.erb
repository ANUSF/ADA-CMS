<script language="application/javascript">

	$("#studies-link").click(function() {
	  $('#study-results').show();
	  $('#study-facets').show();
	  $('#variable-results').hide();
		$('#study-items').toggleClass('selected-tab', true);
		$('#variable-items').toggleClass('selected-tab', false);
	});

	$("#variables-link").click(function() {
	  $('#variable-results').show();
	  $('#study-results').hide();
		$('#study-items').toggleClass('selected-tab', false);
		$('#variable-items').toggleClass('selected-tab', true);
	});
</script>

<p/>

<section id="browse-results">
  <p></p>
  <div id="tabs">
    <ul>
      <li id="study-items" <%= selected_tab_if(['title'], params[:show]) %>> <a id="studies-link">Studies</a> </li>
      <!-- <li id="variable-items" <%= selected_tab_if(['var'], params[:show]) %>> <a id="variables-link">Variables</a> </li> -->
    </ul>
  </div>

  <%= render(:partial => "studies", :locals => {:catalog => @catalog}) %>
</section>
