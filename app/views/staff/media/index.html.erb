
<h2>Shared Resources</h2>

<fieldset class="left half">
  <legend> Resources Tasks </legend>
</fieldset>

<fieldset class="left half">
  <legend>Resource Management </legend>
  Upload Resources
</fieldset>

<fieldset>
  <legend id="media-management">Resources Management (<%= link_to '+', new_staff_media_path %>)</legend>
  <%= will_paginate %>
  <table>
    <thead>
      <tr>
        <th>Resource</th>
        <th>Content Type</th>
        <th>File Size</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%- @collection.each do |media| %>
      <tr id=<%= "mediarow-#{media.id}" %>>
        <td> <%= link_to media.title, media.path.slug %> </td>
        <td> <%= media.asset_content_type %> </td>
        <td> <%= number_to_human_size(media.asset_file_size) %> </td>
        <td> <%= time_ago_in_words(media.created_at) %> ago </td>
        <td>
          <%= link_to 'View', staff_media_path(media) %>
          <%= link_to 'Edit', edit_staff_media_path(media) %>
          <%= link_to 'Delete', staff_media_path(media), :method => :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= page_entries_info @collection %>
</fieldset>
