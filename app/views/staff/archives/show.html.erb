<% content_for(:breadcrumbs) do %>
	Archives: <%= @archive.name %>
<% end %>

<%= link_to 'Integrations', archive_integrations_path(@archive.slug) %>

<p>
<h2>Nesstar Integration</h2>
</p>
Queries: <%= @archive.archive_study_queries.size %>
<br/>
Integrations: <%= @archive.archive_study_integrations.size %> (this number is calculated from manual integrations and those generated automatically by Study Queries).
<br/>
Blocks: <%= @archive.archive_study_blocks.size %>
<br/>
Studies: <%= @archive.archive_studies.size %>
<br/>


<%= link_to "Go to Nesstar Management", new_staff_archive_page_path(:archive_id => @archive) %> 


<p>
<h2>Page Management</h2>
</p>
Pages: <%= @pages.size %> <br/>
<br/>

<%= link_to "Add a page", new_staff_archive_page_path(:archive_id => @archive) %> 


<ul class="sortable">
	<%= render(:partial => "page", :collection => @parent_pages) %>
</ul>

<% content_for :js do %>
	$( ".sortable" ).sortable({
		update: function(event, ui){
			var moved = $(ui.item).attr("id");
			var page_order = $(this).sortable('toArray').toString();
		  $.post("/staff/archives/update_page_order?archive_id=<%= @archive %>", {page_order: page_order, moved: moved});
		}
	});

<% end %>
