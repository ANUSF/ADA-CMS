<% content_for(:breadcrumbs) do %>
  Archives: <%= @archive.name %>
<% end %>

<%= render_archive_partial(@archive) %>

(Drag a menu item above or beneath to order them).
  
<fieldset id="menu-management">
  <legend> Public Menu: Page (<%= link_to "+", new_staff_archive_page_path(:archive_id => @archive) %>) Link (+)</legend>

  <ul class="sortable">
    <%= render(:partial => "menu_item", :collection => @parent_menu_items) %>
  </ul>

  
</fieldset>

<% content_for :js do %>
  $( ".sortable" ).sortable({
    update: function(event, ui){
      var moved = $(ui.item).attr("id");
      var menu_order = $(this).sortable('toArray').toString();
			$.post("/staff/archives/update_menu_order?archive_id=<%= @archive %>", {menu_order: menu_order, moved: moved});
		}
  });
<% end %>
