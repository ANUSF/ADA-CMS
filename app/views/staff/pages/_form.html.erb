<%= javascript_include_tag :ckeditor %>

<% if resource.errors.any? %>
    <h2><%= pluralize(resource.errors.count, "error") %> prohibited this page from being saved:</h2>
    <ul>
    <% resource.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>


Archive: <%= (@archive.nil? ? "ADA" : @archive.name)%> 

<% semantic_form_for([:staff, resource]) do |form| %>
	<%= form.hidden_field :archive_id, :value => (@archive.nil? ? nil : @archive.id) %>
	<%= form.hidden_field :author_id, :value => current_user.id %>
	<table summary="page creation for archive or ADA" border=0 width = 100%>
		<tr>
			<td width=50%><%= form.input :title %></td> 
			<td width=50%>Path: </td>
		</tr>
		<tr>
			<td><%= form.input :parent, :as => :select, :collection => @pages %></td>
			<td><%= form.input :partial, :as => :select, :collection => {"Default" => "/pages/default_page", "Home" => "/pages/home_page", "Breakout Page" => "/pages/breakout_page"}, :include_blank => false, :label => "Template " %></td>			
		</tr>
		<tr>
			<td colspan = 2> Author: (You) <%= current_user.email %> </td>
		</tr>
		<tr>
			<td colspan=2>
				Body:
			  <%= form.cktext_area :body, :toolbar=>'Full', :width=>'80%', :height=>'200px' %>
			</td>
		<tr>
			<td colspan=2>
				Breakout Box:
			  <%= form.cktext_area :breakout_box, :toolbar=>'Full', :width=>'80%', :height=>'200px' %>
			</td>
		<tr>
			<td colspan=2>
			  <% form.buttons do %>
			    <%= form.commit_button %>
		    <li class="button cancel"> 
		      <a href="<%= request.path %>">Cancel</a> 
		    </li>
			  <% end %>				
			</td>
		</tr>
	</table>
<% end %>



