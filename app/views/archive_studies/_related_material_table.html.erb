<table id="related-material-table" border="0">
  <thead>
    <tr>
      <th>Related Material</th>
    </tr>
  </thead>
  <tbody>
    <% for rm in study.related_materials.order(:position) %>
      <tr class="<%= cycle('', 'alt') %>">
        <td>
        <% idx = rm.nesstar_id.split("_").last.to_i + 1 %>
        <%= idx %>.

        (label: <%= rm.label %>) -- (comment: <% rm.comment %>) > regular -
        <% if rm.uri.nil? %>
          <% if rm.label %>
            <%= rm.label %>
          <% else %>
            <%= rm.comment %>
          <% end %>
        <% else %>
	         <a href="<%= related_material_url(rm) %>"><%= related_material_label_then_comment_then_file_name(rm) %></a>
        <% end %>
        </td>
	    </tr>
    <% end %>
  </tbody>
</table>
 