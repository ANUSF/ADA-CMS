<% fields = study.attributes.dup 
  fields.delete("id") 
  fields.delete("created_at")
  fields.delete("updated_at")   
  %>


<table id="study-info-table" border=0>
  <thead>
    <tr>
      <th>Study Information</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <%= study_field_table_row('title', study, fields) %>
    <%= study_field_table_row('series_name', study, fields) %>
    <%= study_field_table_row('stdy_auth_entity', study, fields) %>
    <%= study_field_table_row('stdy_id', study, fields) %>    
    <%= study_field_table_row('abstract_text', study, fields) %>   
    <%= study_field_table_row('doc_prod_date', study, fields) %>        
    <%= study_field_table_row('stdy_bibl_cit', study, fields) %>   
    <%= study_field_table_row('stdy_copyright', study, fields) %>   
    <%= study_field_table_row('stdy_contributor', study, fields) %>   
    <%= study_field_table_row('stdy_contact', study, fields) %>   
    <%= study_field_table_row('stdy_contact_affiliation', study, fields) %>   
  </tbody>
</table>

<table id="study-scope-table" border=0>
  <thead>
    <tr>
      <th>Study Scope</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <%= study_field_table_row('subcat', study, fields) %>
    <%= study_field_table_row('keywords', study, fields) %>
    <%= study_field_table_row('universe', study, fields) %>

    <% if fields.has_key?("collection_start") or fields.has_key?("collection_end") %>
     <tr>
       <td valign=top>Date of Collection</td>
      <td>
          <table>
            <tr>
              <td>
                <%= human_readable('collection_end') %>: <%= study.collection_start %> <% fields.delete('collection_end') %>
              </td>
              <td>
                <%= human_readable('collection_start') %>: <%= study.collection_start %> <% fields.delete('collection_start') %>
                </td>              
            </tr> 
          </table>         
       </td>
     </tr>
    <% end %>

    <% if fields.has_key?("period_start") or fields.has_key?("period_end") %>
     <tr>
       <td valign=top>Time Period</td>
      <td>
          <table>
            <tr>
              <td>
                <%= human_readable('period_end') %>: <%= study.collection_start %> <% fields.delete('period_end') %>
              </td>
              <td>
                <%= human_readable('period_start') %>: <%= study.collection_start %> <% fields.delete('period_start') %>
                </td>              
            </tr> 
          </table>         
       </td>
     </tr>
    <% end %>


    <%= study_field_table_row('geographical_cover', study, fields) %>    
    <%= study_field_table_row('geographical_unit', study, fields) %>   
  </tbody>
</table>

<table id="study-methodology-table" border=0>
  <thead>
    <tr>
      <th>Methodology</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
  	<%= study_field_table_row('sampling', study, fields) %>
  	<%= study_field_table_row('collection_end', study, fields)%>
  	<%= study_field_table_row('data_kind', study, fields) %>
  	<%= study_field_table_row('response', study, fields) %>
  	<%= study_field_table_row('method_notes', study, fields) %>
  </tbody>
</table>

<table id="study-data-access-table" border=0>
  <thead>
    <tr>
      <th>Data Access</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <%= study_field_table_row('access_conditions', study, fields) %>

  </tbody>
</table>

<table id="study-deposit-info-table" border=0>
  <thead>
    <tr>
      <th>Deposit Information</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <%= study_field_table_row('stdy_depositor', study, fields) %>
    <%= study_field_table_row('stdy_dep_date', study, fields)%>
    <%= study_field_table_row('stdy_version', study, fields) %>
    <%= study_field_table_row('response', study, fields) %>
  </tbody>
</table>
 
<table id="study-deposit-info-table" border=0>
  <thead>
    <tr>
      <th>Other</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
  <% for key in fields.keys %>
    <%= study_field_table_row(key, study, fields) %>
  <% end %>
  </tbody>
</table>