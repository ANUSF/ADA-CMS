<% content_for(:sidenav) do %>
  <%= render :partial => '/shared/search_side_nav' %>
<% end %>

<% content_for(:breadcrumbs) do %>
	Search: <%= @term %>
<% end %>

<% content_for :js do %>

  $("#studies-link").click(function() {
    $('#studies-view').toggle();
  });

  $("#variables-link").click(function() {
    $('#variables-view').toggle();
  });

<% end %>
<aside>	</aside>
<article>

	Term: <%= params[:term] %> <p/>
	Filters:
	
<% params[:filters].each do |facet|
    facet.each do |name, value| %>
 		<%= Study::FACETS[name.to_sym] %> = <%= value %>
		<% unless facet == params[:filters].last %>, <% end %>
		<% end %>
<% end %>


<nav class="studynav">
  <ul>
    <li> <a id="studies-link">Studies</a> </li>
    <li> <a id="variables-link">Variables</a> </li>
  </ul>
</nav>

<%= render(:partial => "studies") %>

<%= render(:partial => "variables") %>
  
  <br/>

 <div class="float-centre">
     <%= will_paginate @studies_search.results %>
 </div>

