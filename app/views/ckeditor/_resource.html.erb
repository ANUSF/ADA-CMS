<div class="FCKThumb">
  <table border="0" cellpadding="0" cellspacing="0" height="100" width="100">
    <tbody>
      <tr>
        <td align="center" valign="middle">
          <%= image_tag(resource.url_thumb, :alt => resource.url_content, :title => resource.filename, :onerror=>"this.src='/javascripts/ckeditor/images/ckfnothumb.gif'", :class=>'image') %>
        </td>
       </tr>
     </tbody>
   </table>
   
   <div class="FCKTitle">"<%= resource.title %>"</div>
   <div class="FCKArchive">Main Archive: <%= (a = resource.archive) ? a.name : '(None)' %></div>
   <div class="FCKFileName"><%= resource.filename %></div>
   <div class="FCKFileDate"><%= resource.format_created_at %></div>
   <div class="FCKFileSize"><%= number_to_human_size(resource.size, :precision => 2) %></div>
</div>
